@page "/gerenciador-financas"

<TabControl>
    <TabTitulo>
        <img src="images/@(context.ImageSource).png" />
        @context.Text
    </TabTitulo>


    <ChildContent>
        <TabPage Text="Despesas" ImageSource="minus_red">
           <FinancasDetalhe TipoFinanca="@(TipoFinancaEnum.Debito)"></FinancasDetalhe>
        </TabPage>
        <TabPage Text="Receitas" ImageSource="plus_green">
            <FinancasDetalhe TipoFinanca="@(TipoFinancaEnum.Credito)"></FinancasDetalhe>
        </TabPage>
    </ChildContent>
    
</TabControl>


